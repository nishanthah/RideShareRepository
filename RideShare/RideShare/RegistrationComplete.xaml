<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideShare.RegistrationComplete">  
  <ContentPage.Content>
    <StackLayout x:Name="vrtStackLayout" Orientation="Vertical">
      <Label Text="Please enter the registration code you have received to your email to complete the registration" HorizontalTextAlignment="Start" TextColor="Gray" WidthRequest="300"></Label>
      <Entry x:Name="registrationCodeEntry" Text="{Binding Path=RegistrationCode}" Placeholder="Registration Code" Keyboard="Numeric"/>
      <Button x:Name="nextButton" Command="{Binding NextCommand}" Text="Next" BackgroundColor="#467891" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>