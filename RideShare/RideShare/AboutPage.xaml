<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideShare.AboutPage"
             Title="About">
  <ContentPage.Content>
  <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">  
    <Label Text="Share a ride with your friends/family/colleagues" HorizontalTextAlignment="Center" TextColor="White" ></Label>
    <Label Text="{Binding Path=Version}" HorizontalTextAlignment="Center" TextColor="White" ></Label>
  </StackLayout>
  </ContentPage.Content>
</ContentPage>