<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideShare.MapView"
             Icon="map.png">
  <ContentPage.Content>

    <Grid>

      <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="8*" />
      </Grid.RowDefinitions>

      <Label x:Name="messageLabel" Grid.Row="0" VerticalOptions="Fill" />

      <StackLayout Grid.Row="1"  x:Name="mapContainer" VerticalOptions="Fill" >

      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>