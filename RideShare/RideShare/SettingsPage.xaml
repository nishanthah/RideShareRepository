<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideShare.SettingsPage"
             Title="Settings"> 
<ContentPage.Content>
    <StackLayout x:Name="vrtStackLayout" Orientation="Vertical">
      <BoxView HeightRequest="1" Color="White"></BoxView>
      <Label Text="Delete My Account" FontSize="16">
            <Label.GestureRecognizers>
              <TapGestureRecognizer
                  Command="{Binding TapDeleteMyAccountCommand}" />
            </Label.GestureRecognizers>
          </Label>
      <BoxView HeightRequest="1" Color="White"></BoxView>      
    </StackLayout>
  </ContentPage.Content>
</ContentPage>