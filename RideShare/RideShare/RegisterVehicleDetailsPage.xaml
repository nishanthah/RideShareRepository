<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideShare.RegisterVehicleDetailsPage" >
  <ContentPage.Content>
    <StackLayout x:Name="vrtStackLayout" Orientation="Vertical">
      <StackLayout Orientation="Vertical">
        <Entry x:Name="vehicleModelEntry" Text="{Binding Path=VehicleModel}" Placeholder="Car Model"/>
        <Entry x:Name="vehicleColorEntry" Text="{Binding Path=VehicleColor}" Placeholder="Car Color"/>
        <Entry x:Name="vehicleMaxPassengerCountEntry" Text="{Binding Path=VehicleMaxPassengerCount}" Placeholder="Maximum Passengers"/>
        <Entry x:Name="vehicleNumberPlateEntry" Text="{Binding Path=VehicleNumberPlate}" Placeholder="Number Plate"/>
      </StackLayout>

      <!--<Button x:Name="registerButton" Text="Register" Command="{Binding SignUpCommand}"/>-->
      <Button x:Name="registerButton" Command="{Binding SignUpCommand}" Text="Done" />
        
      

    </StackLayout  >
  </ContentPage.Content>
</ContentPage>